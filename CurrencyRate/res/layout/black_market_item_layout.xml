<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nbu_pattern2" >       
        
        <ImageView
            android:layout_width="11dp"
            android:layout_height="34dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/black_market_currency_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:padding="2dp" />

        <TextView
            android:id="@+id/black_market_currency_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:singleLine="true" />
        
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center" />
        
        <ImageView
            android:layout_width="11dp"
            android:layout_height="34dp"
            android:layout_gravity="center" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nbu_pattern1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            
            <TextView
                android:id="@+id/black_market_buy_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/black_market_buy_direction_img"
                android:layout_alignTop="@+id/black_market_buy_direction_img"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/black_market_buy_direction_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/black_market_buy_txt"
                android:layout_toRightOf="@id/black_market_buy_txt"
                android:padding="4dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >            
            
            <TextView
                android:id="@+id/black_market_sell_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/black_market_sell_direction_img"
                android:layout_alignTop="@+id/black_market_sell_direction_img"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
            
            <ImageView
                android:id="@+id/black_market_sell_direction_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/black_market_sell_txt"
                android:layout_toStartOf="@id/black_market_sell_txt"
                android:padding="4dp" />
            
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp" >
    </LinearLayout>

</LinearLayout>
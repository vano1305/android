<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/MyActionBar</item>
        <item name="android:actionDropDownStyle" tools:targetApi="11">@style/CustomSpinerStyle</item>
    	<!-- <item name="actionDropDownStyle">@style/CustomSpinerStyle</item> -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/action_bar_pattern</item>
        <item name="android:background">@drawable/action_bar_pattern</item>
    </style>
    
    <style name="CustomSpinerStyle" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
       <item name="android:background">@drawable/bar_selector</item>
       <item name="background">@drawable/bar_selector</item>
   	</style>
    
</resources>
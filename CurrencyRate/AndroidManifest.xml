<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dn.ivan.actionbarexample"
    android:versionCode="13"
    android:versionName="1.6.5" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        
        <receiver android:name="dn.ivan.actionbarexample.CommercialWidgetProvider">
        	<meta-data android:name="android.appwidget.provider" android:resource="@xml/currency_widget_provider" />
        	<intent-filter>
            	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        	</intent-filter>
        	<intent-filter>
            	<action android:name="finish_load" />
        	</intent-filter>
        	<intent-filter>
            	<action android:name="start_load" />
        	</intent-filter>
    	</receiver>    	
        <receiver android:name="dn.ivan.actionbarexample.receivers.OnBootReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="dn.ivan.actionbarexample.receivers.UpdateHistoryReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="update_history" />
            </intent-filter>
        </receiver>
        <receiver android:name="dn.ivan.actionbarexample.receivers.LoadHistoryReceiver" android:process=":remote" />
        
        <activity
            android:name="dn.ivan.actionbarexample.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
        	android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dn.ivan.actionbarexample.Preferences"
            android:parentActivityName="dn.ivan.actionbarexample.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="dn.ivan.actionbarexample.MainActivity" />
        </activity>        
        <activity
            android:name="dn.ivan.actionbarexample.NbuCheckActivity"
            android:parentActivityName="dn.ivan.actionbarexample.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="dn.ivan.actionbarexample.MainActivity" />
        </activity>
        
        <service android:name="dn.ivan.actionbarexample.service.BackgroundService" />
        <service android:enabled="true" android:name="dn.ivan.actionbarexample.service.HistoryService"/>
    </application>

</manifest>
